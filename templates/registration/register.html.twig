{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h2>Inscription</h2>

	{{ form_start(registrationForm) }}

	{{ form_row(registrationForm.nameUser, {
        label: 'Prenom :'
    }) }}
    {{ form_row(registrationForm.firstNameUser, {
        label: 'Nom :'
    }) }}
     {{ form_row(registrationForm.pseudo, {
        label: 'Pseudo :'
    }) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe :'
        }) }}
     {{ form_row(registrationForm.bioUser, {
        label: 'Bio :'
    }) }}
     {{ form_row(registrationForm.avatarUser, {
        label: 'Avatar :'
    }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn">S'enregistrer</button>
	{{ form_end(registrationForm) }}
{% endblock %}
